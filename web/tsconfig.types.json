{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"],
      "@public/*": ["./public/*"],
      "@opal": ["./types/opal.d.ts"],
      "@opal/*": ["./types/opal.d.ts"],
      "@opal/icons": ["./types/opal.d.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "tests/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "lib/opal"]
}
